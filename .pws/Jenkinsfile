pipeline {
    agent none
    options {
        skipDefaultCheckout()
    }
    stages {
        stage('Prepare') {
            steps {
                echo "Preparing"
            }
            post {
                cleanup {
                    deleteDir()
                }
            }
        }
        stage('Deploy') {
            when {
                beforeAgent true
                tag "pws/deploy"
            }
            agent { label 'eu-petro-ws' }
            steps {
                dir ("/home/www/petro.ws/blog") {
                    scm checkout
                }
            }
            post {
                cleanup {
                    deleteDir()
                }
            }
        }
    }
}
