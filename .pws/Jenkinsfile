pipeline {
    agent any
    options {
        skipDefaultCheckout()
    }
    stages {
        stage('Prepare') {
            steps {
                // Tests ?
                echo "Preparing"
            }
        }
        stage('Deploy') {
            when {
                beforeAgent true
                allOf {
                    buildingTag()
                    tag pattern: "pws/deploy"
                }
            }
            agent { label 'eu-petro-ws' }
            steps {
                dir ("/home/www/petro.ws/blog") {
                    checkout scm
                }
            }
            post {
                cleanup {
                    deleteDir()
                }
            }
        }
    }
    post {
        cleanup {
            deleteDir()
        }
    }
}
